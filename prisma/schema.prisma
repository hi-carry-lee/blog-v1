generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // 这个警告可能来自IDE（VS Code/Cursor）的 Prisma 语言服务器可能使用了不同版本的验证规则，或扩展版本与项目版本不一致
  // 当前Prisma是6.x，如果Prisma extention是7，那么下面的代码会提示警告
  url      = env("DATABASE_URL")
}

model User {
  id                  String               @id @default(cuid()) // @ 开头：字段级属性
  name                String
  email               String               @unique(map: "user_email_idx")
  emailVerified       DateTime?            @db.Timestamp(6)
  image               String?
  password            String?
  role                String               @default("user")
  address             Json?                @db.Json
  createdAt           DateTime             @default(now()) @db.Timestamp(6)
  updatedAt           DateTime             @updatedAt
  account             Account[]
  posts               Post[]
  comments            Comment[]
  passwordResetTokens PasswordResetToken[]

  @@map("users") // @@ 开头：模型级属性,将模型名 User 映射到数据库表名 users
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  // 新增字段：存储每个provider的特定信息
  providerName  String? // provider提供的用户名
  providerImage String? // provider提供的头像URL

  createdAt DateTime @default(now()) @db.Timestamp(6)
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Category {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique(map: "category_slug_idx")
  createdAt DateTime @default(now()) @db.Timestamp(6)
  updatedAt DateTime @updatedAt
  posts     Post[] // ← 这不是数据库字段！是 Prisma 的虚拟关联，方便我们查询Post，进而计算postCount

  @@map("categories")
}

model Tag {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique
  createdAt DateTime @default(now()) @db.Timestamp(6)
  updatedAt DateTime @updatedAt
  posts     Post[]   @relation("PostTags") // 多对多

  @@map("tags")
}

model Post {
  id         String  @id @default(cuid())
  title      String // 标题
  slug       String  @unique(map: "post_slug_idx") // URL友好的标识符
  brief      String  @db.Text // 摘要/简介
  coverImage String? // 封面图URL（可选）
  content    String  @db.Text // Markdown内容（包含图片URL）

  // SEO 和元数据
  metaTitle       String? // SEO标题（可选，默认使用title）
  metaDescription String? // SEO描述（可选，默认使用brief）

  // 发布控制
  published Boolean @default(false) // 是否发布
  featured  Boolean @default(false) // 是否为精选文章

  // 关联
  categoryId  String    @map("category_id")
  authorId    String    @map("author_id")
  // 时间戳
  publishedAt DateTime? // 发布时间（可选）
  createdAt   DateTime  @default(now()) @db.Timestamp(6)
  updatedAt   DateTime  @updatedAt
  views       Int       @default(0) // 浏览量

  // 关联关系
  // 如果分类下有博客，禁止删除分类，必须先删除或转移所有博客，才能删除分类
  category Category @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  // @relation("PostTags")：Prisma 会自动在数据库中生成一个隐式中间表 _PostTags
  // 包含两个字段：分别指向Post表和Tag表的id，用来建立 Post 和 Tag 的多对多关系
  tags     Tag[]    @relation("PostTags")

  author   User      @relation(fields: [authorId], references: [id])
  comments Comment[]

  // 关联 embedding
  embeddings PostEmbedding[]

  @@map("posts")
}

model Comment {
  id        String   @id @default(uuid())
  content   String // 评论正文
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  authorId  String // 作者（用户）
  postId    String // 所属文章
  parentId  String? // 可选：父评论 ID（自引用，实现嵌套）
  approved  Boolean? @default(false) // 审核状态，暂时使用机器审核

  author  User      @relation(fields: [authorId], references: [id])
  post    Post      @relation(fields: [postId], references: [id])
  parent  Comment?  @relation("CommentReplies", fields: [parentId], references: [id]) // 自引用：父评论
  replies Comment[] @relation("CommentReplies") // 子评论数组
}

model PostEmbedding {
  id     String @id @default(cuid())
  postId String @map("post_id")

  // 嵌入的内容类型
  contentType String @map("content_type") // 'title' | 'content' | 'summary' | 'full'

  // 用于生成 embedding 的原始文本片段
  textChunk String @map("text_chunk") @db.Text

  // 向量数据 (注意：Prisma 原生不支持 vector 类型，需要使用 Unsupported)
  embedding Unsupported("vector(1536)") // 1536 是 OpenAI 的维度

  // 元数据
  chunkIndex Int?   @map("chunk_index") // 如果文章被分成多个块，记录顺序
  tokenCount Int?   @map("token_count") // 这个 chunk 的 token 数量
  modelName  String @default("text-embedding-3-small") @map("embedding_model")
  // OpenAI text-embedding-3-small: 1536 维
  // OpenAI text-embedding-3-large: 3072 维
  // 以后换模型时，可以通过这个字段识别旧数据
  dimensions Int    @default(1536) // 记录维度，方便以后迁移模型

  createdAt DateTime @default(now()) @map("created_at")

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([postId])
  @@map("post_embeddings")
}

model PasswordResetToken {
  id        String    @id @default(cuid())
  userId    String    @map("user_id")
  token     String    @unique // 唯一 token，用于验证
  expiresAt DateTime  @db.Timestamp(6) // 过期时间
  usedAt    DateTime? @map("used_at") @db.Timestamp(6) // 可选：标记是否已使用
  createdAt DateTime  @default(now()) @db.Timestamp(6)
  updatedAt DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token]) // 为 token 字段添加索引，提高查询性能
  @@index([userId]) // 为 userId 添加索引
  @@map("password_reset_tokens")
}
