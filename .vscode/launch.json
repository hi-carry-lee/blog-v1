{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Next.js",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      // "**/node_modules/**" 可以避免在debug结束的时候打开app-page.runtime.dev.js
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "env": {
        "NEXT_PUBLIC_APP_URL": "http://localhost:3000"
      }
    }
  ]
}
